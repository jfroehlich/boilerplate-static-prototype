{
	"base": {
		"assets": "source/"
	},
	"source": {
		"assets": "source/assets/",
		"vendor": "source/assets/vendor/",
		"uploads": "source/uploads/",
		"templates": "source/templates/",
		"content": "source/content/"
	},
	"target": "web/",
	"browserSync": {
		"open": false,
		"server": "web/"
	},
	"markdown": {
		"gfm": true,
		"tables": true,
		"breaks": false,
		"pedantic": true,
		"sanitize": false,
		"smartLists": true,
		"smartypants": true
	},
	"site": {
		"name": "Example Inc",
		"url": "https://example.com",
		"basePath": "/",
		"assetsPath": "/assets/"
	},
    "reports": {
        "urls": [
            "https://example.com/"
        ],
        "chromeFlags": ["--headless"],
        "lighthouseFlags": {
            "output": "json"
        },
        "lighthouseConfig": null,
        "target": "reports/"
    }
}
